<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sinapsis.inrecovery.MenuHerramientas"
    android:background="@color/background3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/existen"
        android:gravity="center"
        android:textSize="@dimen/texto_grande"
        />
    <Button
        android:id="@+id/adiccion0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/adiccion0"
        android:textSize="@dimen/boton_mediano"
        android:background="@color/colornarc_anon"
        android:layout_marginBottom="@dimen/espacio_pequnio"
        android:layout_marginTop="@dimen/espacio_pequnio"/>
    <Button
        android:id="@+id/adiccion1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/adiccion1"
        android:textSize="@dimen/boton_mediano"
        android:background="@color/colortrab_anon"
        android:layout_marginBottom="@dimen/espacio_pequnio"
        android:layout_marginTop="@dimen/espacio_pequnio"
        />
    <Button
        android:id="@+id/adiccion2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/adiccion2"
        android:textSize="@dimen/boton_mediano"
        android:background="@color/colordeud_anon"
        android:layout_marginBottom="@dimen/espacio_pequnio"
        android:layout_marginTop="@dimen/espacio_pequnio"/>
    <Button
        android:id="@+id/adiccion3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/adiccion3"
        android:textSize="@dimen/boton_mediano"
        android:background="@color/colorneur_anon"
        android:layout_marginBottom="@dimen/espacio_pequnio"
        android:layout_marginTop="@dimen/espacio_pequnio"/>
    <Button
        android:id="@+id/adiccion4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/adiccion4"
        android:textSize="@dimen/boton_mediano"
        android:background="@color/colorsex_anon"
        android:layout_marginBottom="@dimen/espacio_pequnio"
        android:layout_marginTop="@dimen/espacio_pequnio"/>

</LinearLayout>
