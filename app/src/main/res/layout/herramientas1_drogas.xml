    <LinearLayout
        android:id="@+id/layout_itemHerramienta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/espacio_mediano"
        android:background="@color/background2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagen_herramienta"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:contentDescription="Descripci贸n del contenido de la imagen"
                android:src="@android:drawable/ic_menu_gallery" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/titulo_herramienta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/hdrogas0t"
                    android:gravity="center_vertical"
                    android:textColor="@color/colornarc_anon5"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <TextView
                    android:id="@+id/descripcion_herramienta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/hdrogas0d"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/si"
                android:gravity="center"
                android:background="@drawable/si_drogas"
                android:id="@+id/si1"
                android:onClick="RespuestaHerramienta_Click"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/no"
                android:gravity="center"
                android:background="@drawable/no_drogas"
                android:id="@+id/no1"
                android:onClick="RespuestaHerramienta_Click"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/espacio_pequenio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/texto_normal"
            android:text="@string/hdrogas0e"
            android:background="@color/background3"
            android:textColor="@color/colorGris1"
            />
    </LinearLayout>



