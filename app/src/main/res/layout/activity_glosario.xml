<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sinapsis.inrecovery.Glosario">
    <TextView
        android:id="@+id/tituloactividad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/glosario"
        android:textSize="@dimen/titulo_grande"/>
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tituloflipper"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/definicionglosario"
            android:text=""
            />
</ViewFlipper>
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/contenidoflipper"
        android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frase1"
        android:text="@string/frase1"
        android:textSize="@dimen/texto_grande"
        android:gravity="center"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase2"
            android:text="@string/frase2"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase3"
            android:text="@string/frase3"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase4"
            android:text="@string/frase4"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase5"
            android:text="@string/frase5"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase6"
            android:text="@string/frase6"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase7"
            android:text="@string/frase7"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase8"
            android:text="@string/frase8"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase9"
            android:text="@string/frase9"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frase10"
            android:text="@string/frase10"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            />
    </ViewFlipper>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/saltar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/Saltar"
            android:background="@color/colorBotones6"/>
        <Button
            android:id="@+id/siguiente"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/Siguiente"
            android:background="@color/colorBotones4"/>
    </LinearLayout>



</LinearLayout>
